<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--显示图片-->
    <TextView
        android:background="@color/AllDefault"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/id_collection_item_tv_image" />
    <!--标题-->
    <TextView
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/id_collection_item_tv_image"
        android:id="@+id/id_collection_item_tv_title" />
    <!--正文-->
    <!--时间-->

    <TextView
        android:text="Brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_collection_item_tv_brief"
        android:layout_alignBottom="@+id/id_collection_item_tv_image"
        android:layout_alignStart="@+id/id_collection_item_tv_title" />

    <TextView
        android:text="Time"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_collection_item_tv_time"
        android:layout_marginEnd="18dp"
        android:layout_alignBaseline="@+id/id_collection_item_tv_brief"
        android:layout_alignBottom="@+id/id_collection_item_tv_brief"
        android:layout_alignParentEnd="true" />
</RelativeLayout>