<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD6D6">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:id="@+id/id_homepage_ll_search"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <TextView
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@mipmap/icon_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textIsSelectable="false"
            android:layout_gravity="center"
            android:hint="@string/hint_find"
            android:id="@+id/id_homepage_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_homepage_ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:background="@mipmap/food"
            style="@style/HomePageIconTV" />
        <TextView
            android:background="@mipmap/shopping"
            style="@style/HomePageIconTV" />
        <TextView
            android:background="@mipmap/film"
            style="@style/HomePageIconTV" />
        <TextView
            android:background="@mipmap/spot"
            style="@style/HomePageIconTV" />

        <TextView
            android:background="@mipmap/exhibition"
            style="@style/HomePageIconTV"
            android:id="@+id/textView" />

        <TextView
            android:background="@mipmap/activity"
            style="@style/HomePageIconTV" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_homepage_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_homepage_ll_function" />


</RelativeLayout>